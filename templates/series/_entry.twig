{% extends "_layout/_layout" %}

{% set title = "entry.title" %}

{% block content %}
	<!-- Hero -->
	<!-- Hero -->
		<div class="content row"> <div class="container col-xxl-8 px-4 py-5">
			<div class="row flex-lg-row-reverse align-items-center g-5 py-5">
				<div class="col-10 col-sm-8 col-lg-6">
					{% set image = entry.featureImage.one() %}
					{% if image %}
						<img src="{{ image.getUrl }}" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="300" height="200" loading="lazy">
					{% endif %}
				</div>
				<div class="col-lg-6">
					<h1 class="display-5 fw-bold lh-1 mb-3">{{ entry.title }}</h1>
					<p class="lead">
						{{ entry.seriesDetails }}
					</p>
					<div class="d-grid gap-2 d-md-flex justify-content-md-start"></div>
				</div>
			</div>

			<!-- slidedown content -->
			<h1 class="text-center">In this series</h1>
			<div class="row">

				{% set entries = entry.relatedMessage.all() %}
				{% if entries|length %}
					{% for message in entries %}
						<div class="col-sm-3">
							<div class="card">
								<img class="card-img-top" src="https://via.placeholder.com/200" alt="Card image cap">
								<div class="card-body">
									<h2 class="card-title">{{ message.title }}</h2>
									<p class="card-text">{{ message.seriesDetails }}</p>
									<a href="{{ message.url }}" class="btn">View Message</a>
								</div>
							</div>
						</div>
					{% endfor %}
				{% endif %}
			</div>
		</div>
		<!-- slidedown content-->
	{% endblock %}
