{% extends "_layout/_layout" %}
{% block pagestyles %}
	home page
{% endblock %}

{% set title = "entry.title" %}

{% block content %}

	<div role="document">
		<div class="content">
			<main>
				{% set image = entry.featureImage.one() %}
				<div class="nr_page-header nr_page-header--has-image">
					<div class="nr_page-header_image">
						<div class="content" {% if image %} style="background-image: url('{{ image.getUrl }}')" {% endif %}></div>
					</div>
				</div>

				<div class="container">
					<div class="row">
						<div class="col-md-3" style="padding-top: 2rem;">
							<div class="menu-main-menu-container">
							{#}
								{% set entries = entry.relatedPages.all() %}
								<ul id="menu-main-menu-1" class="nav nav-pills nav-stacked">
									{% if entries|length %}
									<h2>Related Pages</h2>
										{% for nav in entries %}
											<li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-{{ nav.id }}">
												<a title="{{ nav.title }}" href="{{ nav.url }}">{{ nav.title }}</a>
											</li>
										{% endfor %}
									{% endif %}#}

								</div>
							</div>
							<div class="col-md-9">
								<h1>{{ entry.title}}</h1>
								{{ entry.pageContent}}
							</div>
						</div>
					</div>
				</main>
				<!-- /.main -->
			{% endblock %}
